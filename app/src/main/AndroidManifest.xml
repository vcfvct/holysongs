<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.goodtrendltd.HolySongs"
          android:versionCode="8"
          android:versionName="2.5">
    <uses-sdk android:minSdkVersion="14" android:targetSdkVersion="19"/>

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:label="@string/app_name"
        android:icon="@drawable/icon"
        android:name=".CustomApplication"
        android:theme="@style/BaseAppTheme">
        <activity android:name="MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GospelActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="true"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name">
        </activity>
        <activity android:name=".DisplayLyricActivity"
                  android:label="歌词"
                  android:parentActivityName="MainActivity"/>
        <activity android:name=".AboutActivity"
                  android:label="关于"
                  android:parentActivityName="MainActivity"/>
        <activity android:name=".SettingsActivity"
                  android:label="选项设置"
                  android:parentActivityName="MainActivity"/>
        <activity android:name=".VideoSearch"
                  android:label="视频搜索"
                  android:hardwareAccelerated="true"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ChatActivity"/>
        <activity android:name=".ChatPreActivity"/>
        <activity android:name=".ChatFormActivity"/>
    </application>
</manifest>
