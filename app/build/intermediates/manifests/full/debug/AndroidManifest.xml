<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goodtrendltd.HolySongs"
    android:versionCode="8"
    android:versionName="2.5" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Optional permission for Analytics to run. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.goodtrendltd.HolySongs.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.goodtrendltd.HolySongs.permission.C2D_MESSAGE" />

    <application
        android:name="com.goodtrendltd.HolySongs.CustomApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/BaseAppTheme" >
        <activity
            android:name="com.goodtrendltd.HolySongs.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.goodtrendltd.HolySongs.GospelActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.goodtrendltd.HolySongs.DisplayLyricActivity"
            android:label="歌词"
            android:parentActivityName="com.goodtrendltd.HolySongs.MainActivity" />
        <activity
            android:name="com.goodtrendltd.HolySongs.AboutActivity"
            android:label="关于"
            android:parentActivityName="com.goodtrendltd.HolySongs.MainActivity" />
        <activity
            android:name="com.goodtrendltd.HolySongs.SettingsActivity"
            android:label="选项设置"
            android:parentActivityName="com.goodtrendltd.HolySongs.MainActivity" />
        <activity
            android:name="com.goodtrendltd.HolySongs.VideoSearch"
            android:hardwareAccelerated="true"
            android:label="视频搜索"
            android:screenOrientation="portrait" />
        <activity android:name="com.goodtrendltd.HolySongs.ChatActivity" />
        <activity android:name="com.goodtrendltd.HolySongs.ChatPreActivity" />
        <activity android:name="com.goodtrendltd.HolySongs.ChatFormActivity" />
        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.google.android.gms.measurement.UPLOAD" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.goodtrendltd.HolySongs.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.goodtrendltd.HolySongs" />
            </intent-filter>
        </receiver>
        <!--
 Internal (not exported) receiver used by the app to start its own exported services
             without risk of being spoofed.
        -->
        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdInternalReceiver"
            android:exported="false" />
        <!--
 FirebaseInstanceIdService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.iid.FirebaseInstanceIdService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>